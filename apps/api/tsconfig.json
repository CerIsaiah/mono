{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "../../",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
        "@packages/*": ["../packages/*"]
      }
    },
    "include": ["src/**/*", "../packages/**/*"],
    "exclude": ["node_modules"]
}
  